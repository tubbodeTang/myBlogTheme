.local-search {
  position: relative;
  text-align: left;
  margin-bottom: 10px;
}

.local-search-input-cls {
  width: 200px;
  // margin: 10px 0;
  padding: 8px 12px;
  padding-left: 27px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;

  -webkit-appearance: textfield;
  // -webkit-box-sizing: content-box;
  // font-family: inherit;
  // font-size: 100%;
  &::-webkit-search-decoration,
  &::-webkit-search-cancel-button {
    display: none;
  }
}
.input-icon{
  position: absolute;
  // right: 10px;
  // top: 10px;
  left: 7px;
  top: 11px
  background: #fff;
  color: #bbb;
  // border-radius: 100%;
  line-height: 14px;
  text-align: center;
  font-size: 14px;
  font-family: consolas;
  // border: 1px solid #bbb;
  display: none;
  // display: block;
  width: 14px;
  height: 14px;
  cursor: pointer;
  font-style: normal;
  font-weight: normal;
}

.input-icon.iconfont{
  display: block;
  font-size: 16px;
  top: 10px;
  left: 6px;
}

#local-search-close {
  content: 'âœ–';
  transform: rotateZ(0);
  transition: all 0.3s;
  &:hover {
    top: 9px
    border-color: #63a35c;
    color: #63a35c;
    transform: rotateZ(180deg);
    transition: all 0.3s;
  }
}

.local-search-result-cls {
  // position: absolute;
  // z-index: 99;
  // width: 400px;
  // top: 50px;
  // right: 0;
  margin-top: 70px
  display: none
  .local-search-empty {
    color: #888;
    // line-height: 44px;
    // text-align: center;
    display: block;
    font-size: 16px;
    font-weight: normal;
  }
  ul {
    // width: 360px;
    // max-height: 450px;
    // min-height: 0;
    height: auto;
    // overflow-y: auto;
    // border: 1px solid #CCC;
    // padding: 10px 20px;
    padding: 0;
    background: #FFF;
    // box-shadow: 1px 2px 4px #CCC;
    li {
      text-align: left;
      border-bottom: 1px solid #CCC;
      padding-bottom: 20px;
      margin-bottom: 20px;
      line-height: 30px;
      font-weight: normal;
      &:last-child {
        border-bottom: none;
        margin-bottom: 0;
      }
      a {
        margin-top: 20px;
        font-size: 16px;
      }
      p {
        margin-top: 10px;
        font-size: 14px;
        max-height: 124px;
        overflow: hidden;
      }
      b.search-keyword {
        color: #e96900;
        font-weight: 700;
        font-size: 15px;
        text-decoration: underline
        letter-spacing: 1.5px
      }
    }
  }
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.7;
    width: 200px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
    }
    &:hover,&:active,&:focus{
      border-color:#42b983;
      outline: none;
      width: 230px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}
.search-result-title {
  color: #42b983;
  font-weight: 900;
  font-size: 22px!important;
  &:hover {
    color: #42b983;
    text-decoration: underline;
  }
}

.search-result {
  color: #413f3f;
}